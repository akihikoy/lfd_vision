<launch>
  <!--Camera 1: measure the amount-->
  <node type="color_detector_node" pkg="pr2_lfd_vision" name="color_detector" output="screen">
    <param name="camera" value="1" />
    <param name="rotate90n" value="0" />
    <param name="num_detectors" value="2" />
    <param name="block_area_min" value="10.0" />
    <!--<param name="mode" value="1" />-->
    <param name="mode" value="2" />
    <param name="pub_mode" value="1" />
    <param name="color_files_base" value="$(find pr2_lfd_vision)/x" />
  </node>

  <!--Camera 1: measure the amount-->
  <node type="color_detector_node" pkg="pr2_lfd_vision" name="color_detector2" output="screen">
    <param name="camera" value="2" />
    <param name="rotate90n" value="0" />
    <param name="num_detectors" value="2" />
    <param name="block_area_min" value="10.0" />
    <!--<param name="mode" value="1" />-->
    <param name="mode" value="2" />
    <param name="pub_mode" value="1" />
    <param name="color_files_base" value="$(find pr2_lfd_vision)/x2" />
  </node>
</launch>
